@model WebApplication1.Models.ClientInfo

@{
    ViewData["Title"] = "Client Info";
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="#">New Account Setup Application</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item active">
                    <a class="nav-link" href="/Home/Page1">Client Info</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Home/Page2">Marketing</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Home/Page3">Shipping</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Home/Page4">Pricing</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Home/Page5">EasyWeb</a>
                </li>
            </ul>
        </div>
    </nav>

    <div class="container">
        <div class="section">
            <h2 style="text-align: center;">JDE</h2>

            <div class="title">Bill To Address:</div>
            <div class="field">
                <input asp-for="BillToAddress" class="form-control" />
            </div>

            <div class="title">Ship To Address:</div>
            <div class="field">
                <input asp-for="ShipToAddress" class="form-control" />
            </div>

            <div class="title">Order Acknowledgement Contact:</div>
            <div class="field">
                <input asp-for="OrderAcknowledgementContact" class="form-control" />
            </div>

            <div class="title">Invoice Contact:</div>
            <div class="field">
                <input asp-for="InvoiceContact" class="form-control" />
            </div>

            <div class="title">Shipping Manifest Contact:</div>
            <div class="field">
                <input asp-for="ShippingManifestContact" class="form-control" />
            </div>
            <form action="/Home/Page2" method="get">
                <button type="submit" class="btn btn-primary" style="font-size: smaller; padding: 1px 10px;">Next</button>
            </form>
        </div>
    </div>
</body>
</html>