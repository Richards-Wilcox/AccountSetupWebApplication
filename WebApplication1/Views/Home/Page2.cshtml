@model WebApplication1.Models.Marketing

@{
    ViewData["Title"] = "Marketing";
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="#">New Account Setup Application</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="/Home/Page1">Client Info</a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link" href="/Home/Page2">Marketing</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Home/Page3">Shipping</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Home/Page4">Pricing</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Home/Page5">EasyWeb</a>
                </li>
            </ul>
        </div>
    </nav>


    <div class="section">
        <h2 style="text-align: center;">Marketing</h2>

        <div class="section-box">
            <div class="field">
                <div class="label">Brand</div>
                <label><input type="checkbox" asp-for="BrandRichardsWilcox" /> Richards-Wilcox</label><br>
                <label><input type="checkbox" asp-for="BrandNorthland" /> Northland</label><br>
                <label><input type="checkbox" asp-for="BrandPrivateLabel" /> Private Label</label><br>
            </div>
        </div>

        <div class="section-box">
            <div class="field">
                <div class="label">Product Format</div>
                <label><input type="checkbox" asp-for="ProductFormatSystems" /> Systems</label><br>
                <label><input type="checkbox" asp-for="ProductFormatSemiBulk" /> Semi-Bulk</label><br>
                <label><input type="checkbox" asp-for="ProductFormatBulk" /> Bulk</label><br>
                <label><input type="checkbox" asp-for="ProductFormatBTMS" /> BTMS</label><br>
            </div>
        </div>

        <div class="section-box">
            <div class="field">
                <div class="label">Marketing Allowance</div>
                <select asp-for="MarketingAllowance" class="form-control">
                    <option value=" "> </option>
                    <option value="Yes">Yes</option>
                    <option value="No">No</option>
                </select>
            </div>
        </div>

        <form action="/Home/Page1" method="get">
            <button type="submit" class="btn btn-primary">Previous</button>
        </form>
        <form action="/Home/Page3" method="get">
            <button type="submit" class="btn btn-primary">Next</button>
        </form>
    </div>
</body>
</html>
