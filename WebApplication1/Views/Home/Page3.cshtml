@model WebApplication1.Models.Shipping

@{
    ViewData["Title"] = "Shipping";
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="#">New Account Setup Application</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="/Home/Page1">Client Info</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Home/Page2">Marketing</a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link" href="/Home/Page3">Shipping</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Home/Page4">Pricing</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Home/Page5">EasyWeb</a>
                </li>
            </ul>
        </div>
    </nav>

    <div class="section">
        <h2 style="text-align: center;">Shipping/Logistics</h2>

        <div class="section-box">
            <label for="receiving-facilities">Receiving Facilities</label><br>
            <div id="receiving-facilities">
                <input type="checkbox" asp-for="TruckLevelDock" />
                <label for="receiving-facilities">Truck Level Dock</label><br>

                <input type="checkbox" asp-for="DriveInGroundLevel" />
                <label for="receiving-facilities">Drive In Ground Level</label><br>

                <input type="checkbox" asp-for="OutdoorGroundLevel" />
                <label for="receiving-facilities">Outdoor Ground Level</label><br>

                <input type="checkbox" asp-for="ForkTruck" onchange="showYesNoShipping()" />
                <label for="receiving-facilities">Fork Truck</label><br>

                <div id="yes-no-shipping" style="display: none;">
                    <input type="checkbox" asp-for="ForkTruckYes" />
                    <label for="yes-no-shipping">Yes</label><br>

                    <input type="checkbox" asp-for="ForkTruckYes" />
                    <label for="yes-no-shipping">No</label><br>
                </div>
            </div>
        </div>

        <div class="section-box">
            <label for="delivery-frequency">Delivery Frequency</label><br>
            <select asp-for="DeliveryFrequency" class="form-control">
                <option value=" ">Daily</option>
                <option value="Daily">Daily</option>
                <option value="Weekly">Weekly</option>
                <option value="Monthly">Monthly</option>
                <option value="AsNeeded">As Needed</option>
            </select>
        </div>

        <form action="/Home/Page2" method="get">
            <button type="submit" class="btn btn-primary">Previous</button>
        </form>
        <form action="/Home/Page4" method="get">
            <button type="submit" class="btn btn-primary">Next</button>
        </form>
    </div>
</body>
</html>
