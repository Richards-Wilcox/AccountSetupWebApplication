@model WebApplication1.Models.EasyWeb

@{
    ViewData["Title"] = "EasyWeb";
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="#">New Account Setup Application</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="/Home/Page1">Client Info</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Home/Page2">Marketing</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Home/Page3">Shipping</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Home/Page4">Pricing</a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link" href="/Home/Page5">EasyWeb</a>
                </li>
            </ul>
        </div>
    </nav>

    <div class="section">
        <h2 style="text-align: center;">EasyWeb</h2>

        <div class="section-box">
            <div class="field">
                <div class="label">User:</div>
                <input asp-for="User" class="form-control" />
            </div>
            <div class="field">
                <div class="label">Name:</div>
                <input asp-for="Name" class="form-control" />
            </div>
            <div class="field">
                <div class="label">Email:</div>
                <input asp-for="Email" class="form-control" />
            </div>
        </div>

        <div class="section-box">
            <div class="title">User Hierarchy Required?</div>
            <div class="field">
                <select asp-for="UserHierarchyRequired" class="form-control">
                    <option value="True">Yes</option>
                    <option value="False">No</option>
                </select>
            </div>
        </div>

        <div class="section-box">
            <div class="title">Trainer Name</div>
            <div class="field">
                <input asp-for="Trainer" class="form-control" />
            </div>
        </div>

        <div class="section-box">
            <div class="title">Training Date</div>
            <div class="field">
                <input asp-for="TrainingDate" class="form-control" />
            </div>
        </div>

        <form action="/Home/Page4" method="get">
            <button type="submit" class="btn btn-primary">Previous</button>
        </form>
        <form action="/Home/Page6" method="get">
            <button type="submit" class="btn btn-primary">Next</button>
        </form>
    </div>
</body>
</html>
